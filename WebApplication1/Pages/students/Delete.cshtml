@page "{id}"
@model WebApplication1.Pages.students.DeleteModel
@{
    ViewData["Title"] = "Delete";
    ViewData["ShowButtons"] = false;
}

<h1 class="text-center">Delete Confirmation</h1>

<div class="row">
    <div class="col-12 col-md-6 col-xl-4 offset-sm-0 offset-md-3 offset-xl-4"></div>
    <partial name="_DisplayStudentPartial" model="Model.student" view-data="ViewData" />
</div>

<div class="alert alert-danger">
    <div class="row">
        <div class="col-12 col-md-6 col-xl-4 offset-sm-0 offset-md-3 offset-xl-4">
            <div class="text-center text-secondary">
                <h4>Student ID: <span class="text-primary">@Model.student.Id</span></h4>
                <h4>Student Email: <span class="text-primary">@Model.student.Email</span></h4>
                <h4>Course: <span class="text-primary">@Model.student.Course</span></h4>
            </div>
        </div>
    </div>
    <div class="row">
        <div class="col text-center">
            <h5>Are you shure want to delete student - @Model.student.Name?</h5>

            <form method="post">
                <button type="submit" class="btn btn-danger">Yes</button>
                <a asp-page="Student" class="btn btn-success">No</a>
            </form>
        </div>
    </div>
</div>